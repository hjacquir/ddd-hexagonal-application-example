<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                          https://www.doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
<!--    We call table 'app_user' below instead 'user' because with
a database of type PGSQL the keyword 'user' is reserved and therefore causes an error with doctrine-->
<entity name="App\Application\User" table="app_user">
    <id name="id" type="integer" column="id">
        <generator strategy="AUTO"/>
    </id>
    <field name="login" column="login" type="text" unique="true"/>
    <field name="password" column="password" type="text"/>
    <field name="roles" column="roles" type="array"/>
</entity>
</doctrine-mapping>
